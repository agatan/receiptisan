                            <% unless futankin.empty? %>ÂÜÜ<% else %>-<% end %>
                        </td>
                    <% elsif hoken.is_a?(Recediff::Kohi) %>
                        <% kohi = hoken %>
                        <% kohi_count += 1 %>
                        <td>ÂÖ¨Ë≤ª<%= kohi_count %></td>
