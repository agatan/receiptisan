                </tr>
            </thead>
            <tbody>
                <% kohi_count = 0 %>
                <% receipt.hokens.each_with_index do | hoken, idx | %>
                    <tr>
                    <% if hoken.is_a?(Recediff::Iho) %>
                        <% iho = hoken %>
                        <td>ÂåªÁôÇ‰øùÈô∫</td>
