    }
    .se{
    font-size: 16.44px;
    font-family: Mincho;
    fill: #000;
    }
    .sf{
    font-size: 14.71px;
    font-family: Mincho;
    fill: #000;
    }
    .sg{
    font-size: 11.58px;
    font-family: Mincho;
    fill: #000;
    }
    .sh{
    font-size: 14.25px;
    font-family: Mincho;
    fill: #000;
    }
    .si{
    font-size: 14.25px;
    font-family: Mincho;
    fill: #000;
    }

    .g0{
    fill: #FFF;
    }
    /* 最もよく使われている実線 */
    .g1{
    fill: none;
    stroke: #000;
    stroke-width: 0.274;
    stroke-miterlimit: 10;
    }
    /* 摘要欄で診療識別と項目名の仕切りに使われている破線 */
    .g2{
    fill: none;
    stroke: #000;
    stroke-width: 0.274;
    stroke-miterlimit: 10;
    stroke-dasharray: 2,2;
    }
    .g3{
